<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style parent="Widget.AppCompat.EditText" name="EditTextCustom">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:popupMenuStyle">@style/PopUpMenu</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="standard_divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ToolBarTheme" parent="">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="PopUpMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.TextInputLayout"></style>
    <style name="EditTextCustom.EditTextTheme" parent="EditTextCustom">
        <item name="colorControlActivated">@color/activated</item>
        <item name="colorControlHighlight">@color/highlighted</item>
        <item name="colorControlNormal">@color/colorNormal</item>
    </style>

</resources>
