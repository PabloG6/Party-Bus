<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="standard_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style parent="Widget.AppCompat.EditText" name="EditTextCustom">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppCompat.ImageButton.SocialMedia" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="ToolBarTheme"></style>
    <style name="CustomEditTtextTheme" parent="EditTextCustom">
        <item name="colorControlActivated">@color/activated</item>
        <item name="colorControlHighlight">@color/highlighted</item>
        <item name="colorControlNormal">@color/colorNormal</item>
    </style>

    <style name="TextAppearance.AppCompat.TextInputLayout"></style>

    <style name="EditTextCustom.EditTextTheme.Money">
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="colorControlNormal">@color/colorNormal</item>
    </style>
</resources>
