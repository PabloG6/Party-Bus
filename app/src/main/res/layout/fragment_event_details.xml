<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_holder"
    android:layout_width="300dp"
    app:cardElevation="5dp"
    android:layout_height="320dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_details_blue_900_24dp"
            app:layout_constraintBaseline_creator="@+id/money_switch"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Switch
            android:id="@+id/money_switch"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="Free?"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginRight="47dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/ic_local_atm_blue_400_24dp"
            android:id="@+id/imageView4"
            app:layout_constraintRight_toLeftOf="@+id/money_switch"
            android:layout_marginRight="54dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="41dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/ic_local_drink_blue_400_24dp"
            app:layout_constraintRight_toLeftOf="@+id/drink_switch"
            android:layout_marginRight="53dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <Switch
            android:id="@+id/drink_switch"
            android:layout_width="99dp"
            android:layout_height="29dp"
            android:text="Drinks?"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/money_switch"
            android:layout_marginRight="47dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

