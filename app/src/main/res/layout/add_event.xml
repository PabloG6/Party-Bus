<?xml version="1.0" encoding="utf-8"?>
<!--todo add ripple effect-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/list_card_padding"
    android:paddingTop="@dimen/list_card_padding"
    android:paddingEnd="@dimen/list_card_padding"
    android:id="@+id/add_event"
    tools:showIn="@layout/fragment_event_list"
    android:background="@color/white">

    <TextView
        android:id="@+id/add_event_image"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_centerVertical="true"

        android:background="@drawable/stock_image_background"
        android:gravity="center"
        android:text="P"
        android:textColor="@android:color/white"
        android:textSize="18sp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/add_event_image"
        android:text="Add an event"
        android:textColor="#000"
        android:textSize="18sp" />

    <View
        android:layout_below="@+id/add_event_image"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"/>



</RelativeLayout>