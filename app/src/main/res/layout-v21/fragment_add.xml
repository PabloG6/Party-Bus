<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_holder"
    android:layout_width="300dp"
    app:cardElevation="5dp"
    android:layout_height="320dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            app:srcCompat="@drawable/ic_directions_car_orange_700_24dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/highlighted"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_title"
                style="@style/EditTextCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:theme="@style/EditTextCustom.EditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <fragment

                android:id="@+id/search_place"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/place_autocomplete_fragment"

                />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v7.widget.CardView>

